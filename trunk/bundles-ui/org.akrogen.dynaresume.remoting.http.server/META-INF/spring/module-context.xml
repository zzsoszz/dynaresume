	<bean name="/UserService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
  <property name="service" ref="userService"/>
  <property name="serviceInterface" value="org.akrogen.dynaresume.service.IUserService"/>
</bean>


<bean name="/AgenceService"  class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
  <property name="service" ref="agenceService"/>
  <property name="serviceInterface" value="org.akrogen.dynaresume.service.IAgenceService"/>
  <property name="remoteInvocationExecutor" ref="myRemoteInvocationExecutor" ></property>
</bean>


<bean id="myRemoteInvocationExecutor" class="org.akrogen.dynaresume.remoting.http.RemoteInvocationExecutor"/>

<bean name="/CompetenceService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
  <property name="service" ref="competenceService"/>
  <property name="serviceInterface" value="org.akrogen.dynaresume.service.ICompetenceService"/>
</bean>
 
	<bean id="scalpa" class="org.akrogen.dynaresume.remoting.http.Scalpa"
		init-method="start">
	<property name="agenceService" ref="agenceService"></property>	
		</bean>
 
</beans>